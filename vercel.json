{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server.js"
        },
        {
            "source": "/shop",
            "destination": "/server.js"
        },
        {
            "source": "/product",
            "destination": "/server.js"
        },
        {
            "source": "/cart",
            "destination": "/server.js"
        },
        {
            "source": "/xrt-admin(.*)",
            "destination": "/server.js"
        }
    ]
}